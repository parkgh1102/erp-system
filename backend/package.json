{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "ERP 통합시스템 백엔드 API 서버",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:postgres": "cp .env.postgres .env && npm run dev",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "node start-production.js",
    "start:postgres": "cp .env.postgres .env && npm start",
    "build:prod": "npm run build && npm run start:prod",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run lint",
    "security:fix": "npm audit fix",
    "migration:generate": "typeorm migration:generate",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "schema:sync": "typeorm schema:sync",
    "schema:drop": "typeorm schema:drop"
  },
  "dependencies": {
    "@hapi/crumb": "^9.0.1",
    "@types/express-session": "^1.18.2",
    "@types/pg": "^8.15.5",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.10.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.2"
  }
}
