# 서버 설정
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com

# PostgreSQL 데이터베이스 설정
DB_TYPE=postgres
DB_HOST=your-postgres-host.com
DB_PORT=5432
DB_USERNAME=erp_user
DB_PASSWORD=your_strong_production_password_here
DB_DATABASE=erp_system

# JWT 설정 (운영환경에서는 반드시 새로운 시크릿 생성)
JWT_SECRET=generate_new_64_character_secret_for_production_use_only
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=generate_different_64_character_refresh_secret_for_production
JWT_REFRESH_EXPIRES_IN=7d

# 파일 업로드 설정
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 보안 설정
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=50

# 로깅 설정
LOG_LEVEL=warn
LOG_FILE=logs/app.log

# HTTPS 설정
FORCE_HTTPS=true

# SSL 설정 (선택사항)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem