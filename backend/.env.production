# Railway 프로덕션 환경 설정

# 서버 설정
NODE_ENV=production
PORT=${{PORT}}
FRONTEND_URL=${{FRONTEND_URL}}

# PostgreSQL 데이터베이스 설정 (Railway에서 자동으로 제공)
DB_TYPE=postgres
DB_HOST=${{PGHOST}}
DB_PORT=${{PGPORT}}
DB_USERNAME=${{PGUSER}}
DB_PASSWORD=${{PGPASSWORD}}
DB_DATABASE=${{PGDATABASE}}

# JWT 설정 (Railway 환경변수에서 설정 필요)
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=${{JWT_REFRESH_SECRET}}
JWT_REFRESH_EXPIRES_IN=7d

# 파일 업로드 설정
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 보안 설정
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=logs/app.log

# HTTPS 설정
FORCE_HTTPS=true