# AWS Elastic Beanstalk 환경변수 템플릿
# backend/.env.production 또는 EB Console에서 설정

# 애플리케이션 환경
NODE_ENV=production
PORT=8080

# 데이터베이스 설정 (RDS PostgreSQL)
DB_TYPE=postgres
DB_HOST=erp-database.xxxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=erp_admin
DB_PASSWORD=your-strong-password-here
DB_DATABASE=erp_system

# JWT 설정 (openssl rand -hex 32로 생성)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
SESSION_SECRET=your-session-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 보안 설정
BCRYPT_ROUNDS=12

# CORS 설정
FRONTEND_URL=https://webapperp.ai.kr

# 선택사항: Cloudinary (이미지 업로드)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# 선택사항: Google AI
GOOGLE_AI_API_KEY=your-google-ai-key
